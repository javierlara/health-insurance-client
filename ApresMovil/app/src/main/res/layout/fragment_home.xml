<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apres.apresmovil.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/slider_cuidamos" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <Button
                android:id="@+id/new_home"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:textColor="@color/textIconsColor"
                android:text="Novedades" />

            <Button
                android:id="@+id/centers_home"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:textColor="@color/textIconsColor"
                android:text="Centros" />
        </LinearLayout>

        <Button
            android:id="@+id/cartilla_home"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/my_button"
            android:textColor="@color/textIconsColor"
            android:text="Cartilla" />
        <Button
            android:id="@+id/my_appointments_home"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/my_button"
            android:textColor="@color/textIconsColor"
            android:text="Mis Turnos" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <Button
                android:id="@+id/sac_home"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:textColor="@color/textIconsColor"
                android:text="AtenciÃ³n al cliente" />

            <Button
                android:id="@+id/emergency_home"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:textColor="@color/textIconsColor"
                android:text="Emergencias" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
